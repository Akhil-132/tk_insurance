<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View for company Name -->
    <record id="view_company_name_tree" model="ir.ui.view">
        <field name="name">company.name.tree</field>
        <field name="model">insurance.company.name</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_company_name_form" model="ir.ui.view">
        <field name="name">company.name.form</field>
        <field name="model">insurance.company.name</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_company_name" model="ir.actions.act_window">
        <field name="name">Company Names</field>
        <field name="res_model">insurance.company.name</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
