<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View for Nationality -->
    <record id="view_nationality_tree" model="ir.ui.view">
        <field name="name">nationality.tree</field>
        <field name="model">insurance.nationality</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_nationality_form" model="ir.ui.view">
        <field name="name">nationality.form</field>
        <field name="model">insurance.nationality</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_nationality" model="ir.actions.act_window">
        <field name="name">Nationality</field>
        <field name="res_model">insurance.nationality</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
