<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View for Area Covered -->
    <record id="view_area_covered_tree" model="ir.ui.view">
        <field name="name">area.covered.tree</field>
        <field name="model">insurance.area.covered</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_area_covered_form" model="ir.ui.view">
        <field name="name">area.covered.form</field>
        <field name="model">insurance.area.covered</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_area_covered" model="ir.actions.act_window">
        <field name="name">Area Covered</field>
        <field name="res_model">insurance.area.covered</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
